@inherits ConfirmBase

<div class="modal-container @toggleModalClass">
    <div class="modal-box">
       <div class="modal-header d-flex">
            <span><b>@Title</b></span>
            <a class="closeBtn" @onclick="CloseDeleteConfirmationModal">
                <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="#1f1f1f"><path d="m336-280-56-56 144-144-144-143 56-56 144 144 143-144 56 56-144 143 144 144-56 56-143-144-144 144Z"/></svg>
            </a>
       </div>
        <div class="modal-body d-flex justify-content-between">
            <div class="q-text">
                @Text
            </div>
            <div class="modal-btns">
                <button class="btn btn-primary" @onclick="DeleteUser">Yes</button>
                <button class="btn btn-danger" @onclick="CloseDeleteConfirmationModal">No</button>
            </div>
        </div>
    </div>
</div>