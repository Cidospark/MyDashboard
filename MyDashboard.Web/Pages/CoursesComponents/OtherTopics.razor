<h5>Example of multiple cascading value</h5>
<button class="btn btn-primary" @onclick="IncrementCounter">
    Increment Counter
</button>

<CascadingValue Value="@Style" Name="Style" IsFixed="true">
    <CascadingValue Value="@Counter" Name="Counter" IsFixed="false">
        <CascadingChildComponent></CascadingChildComponent>
    </CascadingValue>
</CascadingValue>

@code {
    public int Counter { get; set; } = 0;
    public string Style { get; set; } = "border:1px solid red; color:red";

    private void IncrementCounter()
    {
        Counter = Counter + 1;
    }
}