@code{
    private bool isSidebarOpen = false;
    private bool isSiubmenuOpen = false;
    private string sidebarClass = "";
    private string submenuClass = "";
    private string rotateMenuBtn = "";
    private string rotateSubmenuBtn = "";


    private void toggleSidebar()
    {
        if(isSiubmenuOpen){
            CloseSubmenu();
        }
        if(isSidebarOpen){
            CloseSidebar();
        }else{
            isSidebarOpen = true;
            sidebarClass = "close";
            rotateMenuBtn = "rotate";
        }
    }

    private void toggleSubmenu(MouseEventArgs e)
    {
        if(isSidebarOpen){
            CloseSidebar();
        }
        if(isSiubmenuOpen){
            CloseSubmenu();
        }else{
            isSiubmenuOpen = true;
            submenuClass = "show";
            rotateSubmenuBtn = "rotate";
        }
    }

    private void CloseSubmenu()
    {
        submenuClass = null;
        isSiubmenuOpen = false;
        rotateSubmenuBtn = null;
    }

    private void CloseSidebar()
    {
        sidebarClass = null;
        isSidebarOpen = false;
        rotateMenuBtn = null;
    }
}